rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Users directory - authenticated users can read/write their own data
    match /users/{userId}/{allPaths=**} {
      // Allow read if user is authenticated
      allow read: if request.auth != null;
      
      // Allow write only to own user folder
      allow write: if request.auth != null && request.auth.uid == userId;
    }lets focus on home
    
    // Profile images - public read, authenticated write
    match /users/{userId}/profile_images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Scan/Record images - authenticated users can read/write their own
    match /users/{userId}/records/{recordId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public assets (if needed)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
